{
  "name": "@maas-ui/maas-ui-shared",
  "version": "1.3.1",
  "license": "AGPL-3.0",
  "private": true,
  "main": "dist/index.js",
  "files": [
    "src/**/*.js",
    "dist/**/*.js",
    "!/dist/**/*.test.js"
  ],
  "scripts": {
    "build": "yarn build-declaration && babel src --out-dir dist --extensions '.js,.jsx,.ts,.tsx'",
    "build-declaration": "tsc",
    "clean": "rm -rf node_modules dist",
    "lint": "yarn lint-package-json && yarn lint-js",
    "lint-js": "eslint src",
    "lint-package-json": "npmPkgJsonLint .",
    "prepublishOnly": "yarn build",
    "test": "jest --testPathIgnorePatterns=dist",
    "watch": "yarn build --watch",
    "watch-declaration": "yarn build-declaration --watch"
  },
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.14.4",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@typescript-eslint/eslint-plugin": "4.24.0",
    "@typescript-eslint/parser": "4.24.0",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "babel-plugin-inline-dotenv": "1.6.0",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.2",
    "eslint": "7.27.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.7.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-no-only-tests": "2.6.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "26.6.3",
    "mockdate": "3.0.5",
    "npm-package-json-lint": "5.1.0"
  },
  "dependencies": {
    "@types/enzyme": "3.10.8",
    "@types/google.analytics": "0.0.41",
    "@types/history": "4.7.8",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.9",
    "@types/react-dom": "17.0.6",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "typescript": "4.2.4"
  },
  "npmpackagejsonlint": {
    "rules": {
      "prefer-absolute-version-dependencies": "error",
      "prefer-absolute-version-devDependencies": "error",
      "prefer-alphabetical-dependencies": "error",
      "prefer-alphabetical-devDependencies": "error"
    }
  }
}
